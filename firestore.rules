
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    // Robust Admin Check
    // Checks if the user doc exists and has role == 'admin'
    function isAdmin() {
      return request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // --- Global Admin Access ---
    // Admins have full read/write access to everything by default
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // --- Specific Collection Rules ---

    // 1. Users (Profiles)
    match /users/{userId} {
      // Public read for profiles (required for "View Public Profile" feature)
      allow read: if true;
      
      // Write: Only the owner OR an Admin
      allow write: if isOwner(userId) || isAdmin();

      match /{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // 2. Instructors (Public Discovery, Restricted Write)
    // Corresponds to "Guides" in the UI
    match /instructors/{instructorId} {
      allow read: if true;

      // Create: Admin OR (Signed in user claiming ownership)
      allow create: if isAdmin() || (signedIn()
        && request.resource.data.ownerId == request.auth.uid);

      // Update: Admin OR (Owner, ensuring they don't change the ownerId)
      allow update: if isAdmin() || (signedIn()
        && resource.data.ownerId == request.auth.uid
        && request.resource.data.ownerId == resource.data.ownerId);

      // Delete: Admin OR Owner
      allow delete: if isAdmin() || (signedIn()
        && resource.data.ownerId == request.auth.uid);
    }

    // 3. Retreats (Public Discovery, Restricted Write)
    match /retreats/{retreatId} {
      allow read: if true;

      // Create: Admin OR (Signed in user claiming ownership)
      allow create: if isAdmin() || (signedIn()
        && request.resource.data.ownerId == request.auth.uid);

      // Update: Admin OR (Owner, ensuring they don't change the ownerId)
      allow update: if isAdmin() || (signedIn()
        && resource.data.ownerId == request.auth.uid
        && request.resource.data.ownerId == resource.data.ownerId);

      // Delete: Admin OR Owner
      allow delete: if isAdmin() || (signedIn()
        && resource.data.ownerId == request.auth.uid);
    }
  }
}
